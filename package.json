{
  "name": "@qlever-llc/trellis-data-manager",
  "version": "0.2.6",
  "description": "A microservice for managing trellis master data elements.",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "src/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "start": "node ${INSPECT:-} --enable-source-maps dist/index.js",
    "test": "yarn build test && c8 ava -T 60m -svc 1 --no-worker-threads",
    "dev:test": "tsc -b --watch ./test",
    "test:debug": "ava -T 60m -svc 1 --no-worker-threads",
    "lint": "eslint ."
  },
  "ava": {
    "failFast": false,
    "files": [
      "**/*.test.ts"
    ],
    "typescript": {
      "extensions": [
        "ts"
      ],
      "rewritePaths": {
        "src/": "dist/",
        "test/": ".test/"
      },
      "compile": false
    }
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true,
    "src": "src",
    "exclude": [
      "*.d.ts",
      ".pnp.*",
      ".test"
    ]
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.1",
    "@oada/client": "^5.2.3",
    "@oada/jobs": "^4.5.2",
    "@oada/lib-config": "^4.0.0",
    "@oada/lib-prom": "^4.0.0",
    "@oada/list-lib": "^4.3.0",
    "@oada/pino-debug": "^4.0.1",
    "@oada/types": "^3.5.3",
    "convict-format-with-moment": "^6.2.0",
    "debug": "^4.3.7",
    "es-main": "^1.3.0",
    "fuse.js": "^7.0.0",
    "js-sha256": "^0.11.0",
    "json-ptr": "^3.1.1",
    "match-json": "^1.3.7",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/clone-deep": "^4.0.4",
    "@types/convict": "^6.1.6",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.10",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@yarnpkg/sdks": "^3.2.0",
    "ava": "6.1.3",
    "c8": "^10.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-xo": "^0.45.0",
    "eslint-config-xo-typescript": "^4.0.0",
    "eslint-plugin-array-func": "^5.0.2",
    "eslint-plugin-ava": "^15.0.1",
    "eslint-plugin-escompat": "^3.11.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-github": "^5.0.2",
    "eslint-plugin-i18n-text": "^1.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-constructor-bind": "^2.0.4",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-no-secrets": "^1.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-notice": "^1.0.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.4",
    "eslint-plugin-unicorn": "^54.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "resolutions": {
    "jsonpath-plus": "^10.0.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz"
  },
  "packageManager": "yarn@4.5.0",
  "volta": {
    "node": "22.9.0"
  }
}
